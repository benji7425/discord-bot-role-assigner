{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "./node_modules/.bin/tsc",
            "problemMatcher": "$tsc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "presentation": {
                "reveal": "silent",
                "focus": false
            }
        },
        {
            "label": "watch",
            "command": "./node_modules/.bin/tsc -w",
            "problemMatcher": "$tsc-watch",
            "type": "shell",
            "presentation": {
                "reveal": "silent",
                "focus": false
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "./node_modules/.bin/ts-node test-runner.ts",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        }
    ]
}